{
  "name": "react-native-bootpay-api",
  "version": "1.5.2",
  "description": "React Native를 위한 bootpay 라이브러리 입니다.",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "src/index.d.ts", 
  "react-native": "src/index",
  "source": "src/index",
  "contributors": [
    "Bootpay <bootpay.co.kr@gmail.com>"
  ],
  "files": [
    "src",
    "lib",
    "images",
    "android",
    "ios",
    "cpp",
    "react-native-bootpay-api.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/bootpay/react-native-bootpay-api",
  "author": "bootpay <bootpay.co.kr@gmail.com> (https://github.com/bootpay)",
  "license": "MIT",
  "bugs": {
    "url": "https://bootpay.channel.io/"
  },
  "homepage": "https://www.bootpay.co.kr/",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },  
  "devDependencies": {
    "@commitlint/config-conventional": "^16.2.1",
    "@react-native-community/eslint-config": "^3.0.1",
    "@release-it/conventional-changelog": "^4.3.0",
    "@types/jest": "^27.4.1",
    "@types/react": "^18.0.6",
    "@types/react-native": "0.67.5",
    "commitlint": "^16.2.3",
    "eslint": "^8.13.0",  
    "jest": "^27.5.1",
    "pod-install": "^0.1.33",
    "prettier": "^2.6.2",
    "react": "18.0.0",
    "react-native": "0.68.1",
    "react-native-builder-bob": "^0.18.2",
    "release-it": "^14.14.2",
    "typescript": "^4.6.3",
    "react-native-webview-bootpay": "^11.18.13",
    "react-native-device-info": "^8.7.0",
    "react-native-sensitive-info": "^5.5.8",
    "react-native-base64": "^0.2.1", 
    "react-native-aes-crypto": "^2.1.0"
  }, 
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  }, 
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ], 
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
